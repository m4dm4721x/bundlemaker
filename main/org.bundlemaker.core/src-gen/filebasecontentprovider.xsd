<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema">

    <xsd:element name="XmlFileBasedContent" type="XmlFileBasedContentType"/>

    <!-- the xml resource content -->
    <xsd:complexType name="XmlFileBasedContentType">
        <xsd:sequence>
            <xsd:element maxOccurs="unbounded" minOccurs="0" name="binaryPathNames" nillable="true"
                type="xsd:string"/>
            <xsd:element minOccurs="1" name="resourceContent" type="XmlResourceContentType"
                maxOccurs="1"/>
        </xsd:sequence>
        <xsd:attribute name="name" type="xsd:string" use="required"/>
        <xsd:attribute name="version" type="xsd:string" use="required"/>
        <xsd:attribute name="analyzeMode">
            <xsd:simpleType>
                <xsd:restriction base="xsd:string">
                    <xsd:enumeration value="BINARIES_ONLY"/>
                    <xsd:enumeration value="BINARIES_AND_SOURCES"/>
                    <xsd:enumeration value="DO_NOT_ANALYZE"/>
                </xsd:restriction>
            </xsd:simpleType>
        </xsd:attribute>
    </xsd:complexType>

    <!-- the xml resource content -->
    <xsd:complexType name="XmlResourceContentType">
        <xsd:sequence>
            <xsd:element maxOccurs="unbounded" minOccurs="0" name="sourcePathNames" nillable="true"
                type="xsd:string"/>
        </xsd:sequence>
    </xsd:complexType>
</xsd:schema>
