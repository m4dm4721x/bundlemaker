<project name="buildhelper" basedir="..">

	<!-- -->
	<available file="${basedir}/build/build.properties"
	           property="build.properties.present" />


	<!-- ================================= 
          target: copy-template              
         ================================= -->
	<target name="copy-template" unless="${build.properties.present}">
		<copy file="${basedir}/build/build.properties-template"
		      tofile="${basedir}/build/build.properties">
			<filterset>
				<filter token="ECLIPSE_HOME" value="${eclipse.home}" />
			</filterset>
		</copy>
	</target>

</project>
