<project basedir="."
         name="prepare-integrationtest"
         default="prepare-integrationtest">

	<property name="eclipse-prepackaged-url"
	          value="http://drupal.bundlemaker.org/sites/bundlemaker.org/files/org.bundlemaker.itest.eclipse_eclipse.zip" />

	<property file="${basedir}/proxy.properties" />

	<!-- ================================= 
          target: prepare-integrationtest              
         ================================= -->
	<target name="prepare-integrationtest" depends="set-proxy">

		<delete dir="${basedir}/eclipse" quiet="true"/>
		<mkdir dir="${basedir}/eclipse" />

		<get dest="${basedir}/eclipse/org.bundlemaker.itest.eclipse_eclipse.zip"
		     src="${eclipse-prepackaged-url}"
		     verbose="true" />

		<unzip src="${basedir}/eclipse/org.bundlemaker.itest.eclipse_eclipse.zip"
		       dest="${basedir}/eclipse" />

	</target>

	<!-- - - - - - - - - - - - - - - - - - 
          target: set-proxy                      
         - - - - - - - - - - - - - - - - - -->
	<target name="set-proxy" if="proxy.host">
		<setproxy proxyhost="${proxy.host}" proxyport="${proxy.port}" />
	</target>

</project>