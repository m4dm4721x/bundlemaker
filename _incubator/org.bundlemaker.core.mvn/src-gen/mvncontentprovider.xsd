<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema">

    <xsd:element name="mvnContent" type="MvnContentType"/>

    <!-- the xml resource content -->
    <xsd:complexType name="MvnContentType">
        <xsd:sequence maxOccurs="unbounded">
            <xsd:element minOccurs="1" name="artifacts" type="MvnArtifactType" maxOccurs="1"/>
        </xsd:sequence>
    </xsd:complexType>

    <xsd:complexType name="MvnArtifactType">
        <xsd:sequence>
            <xsd:element minOccurs="1" name="groupId" type="xsd:string" maxOccurs="1"/>
            <xsd:element minOccurs="1" name="artifactId" type="xsd:string" maxOccurs="1"/>
            <xsd:element minOccurs="1" name="version" type="xsd:string" maxOccurs="1"/>
        </xsd:sequence>
    </xsd:complexType>

</xsd:schema>
